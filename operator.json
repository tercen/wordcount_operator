{
  "name": "Word Count",
  "description": "Counts words in a document.",
  "tags": [
    "descriptive statistics"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/wordcount_operator"
  ],
  "properties": [],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Document",
            "type": "",
            "description": "Document identifier (documentId)",
            "ontologyMapping": "documentId",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": []
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "description": "Word frequency counts - no join to input",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [],
              "rColumns": []
            },
            "rightRelation": {
              "kind": "TableRelation",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "word",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": "word_count",
                  "type": "double"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}